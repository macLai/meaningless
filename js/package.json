{
  "name": "iScarfTool",
  "version": "1.0.2",
  "description": "multi flatform editor for iScraf Tool",
  "main": "main.js",
  "repository": "",
  "scripts": {
    "start": "electron . iScarfTool",
    "pack": "build --dir",
    "build": "build",
    "build:snap": "build --linux snap",
    "build:win": "build --win",
    "build:win32": "build --win --ia32",
    "build:win:linux": "build --linux && build --win && build --win --ia32",
    "rebuild": "electron-rebuild -f -w node-pty",
    "standard": "standard --fix",
    "compile": "npx babel src/javascript --out-dir src/javascript-compiled --source-maps"
  },
  "standard": {
    "ignore": [
      "/node_modules",
      "/build",
      "/dist",
      "/languages",
      "/plugins",
      "/themes",
      "/src/lib",
      "/src/mode",
      "/src/addons"
    ]
  },
  "keywords": [
    "Graviton",
    "Editor",
    "code",
    "open source",
    "modern"
  ],
  "author": "Zewen Lai<laizewen@iauto.com>",
  "license": "MIT",
  "dependencies": {
    "appdata-path": "^1.0.0",
    "fs-extra": "^7.0.1",
    "jquery": "^3.4.0",
    "marked": "^0.8.0",
    "node-pty": "^0.8.1",
    "nodejs": "0.0.0",
    "npm": "^6.13.6",
    "octonode": "^0.9.5",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rpm": "0.0.0",
    "standard": "^12.0.1",
    "xterm": "^3.14.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "electron": "^9.1.0",
    "electron-builder": "^20.43.0",
    "electron-rebuild": "^1.8.5"
  },
  "build": {
    "appId": "graviton-editor",
    "artifactName": "${name}-${version}-${arch}-${platform}.${ext}",
    "icon": "build/mac/icon.png",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "build/linux"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/win/icon.ico"
    }
  }
}
